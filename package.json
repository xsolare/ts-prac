{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "xsolare-prac",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "nuxt dev",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "lint": "npm run lint:ts && npm run lint:style",
    "lint:ts": "eslint \"./**/*.{ts,tsx,vue}\" --fix",
    "lint:style": "stylelint \"./**/*.{css,sass,scss,vue}\" --fix --allow-empty-input --customSyntax postcss-scss",
    "format": "prettier -w \"./**/*.{ts,tsx,json,scss,md,vue}\"",
    "postinstall": "husky install .husky"
  },
  "dependencies": {
    "@mdi/font": "^7.2.96",
    "@nuxt/content": "^2.8.2",
    "@pinia/nuxt": "0.4.11",
    "pinia": "2.1.6",
    "vuetify": "3.3.17"
  },
  "devDependencies": {
    "@nuxt/types": "2.17.1",
    "@nuxtjs/color-mode": "^3.3.0",
    "@nuxtjs/eslint-config-typescript": "^12.1.0",
    "@types/node": "20.6.3",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.49.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-vue": "^9.17.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "nuxt": "3.7.3",
    "prettier": "^3.0.3",
    "sass": "^1.68.0",
    "stylelint": "^15.10.3",
    "stylelint-config-recommended-scss": "^13.0.0",
    "stylelint-config-recommended-vue": "^1.5.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --fix",
    "*.{css,sass,scss,vue,htm,html}": "stylelint --fix --allow-empty-input",
    "*": "prettier -w -u"
  }
}
